{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
 {% block stylesheets %}
     <link href="{{ asset('css/login.css') }}" rel="stylesheet"/>{% endblock %}
{% block header_navigation_links %}{% endblock %}
{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="container">
        <div class=" d-flex justify-content-center h-100">
            <div class=" margin-card card">
                <div class="card-header">
                    <h3>Prihlásenie</h3>
                </div>
                <div class="card-body">
                    <label for="inputUsername"></label>

                    <input type="text" value="{{ last_username }}" placeholder="Meno" name="username" id="inputUsername"
                           class="form-control" required autofocus>
                    <label for="inputPassword"></label>

                    <input placeholder="Heslo" type="password" name="password" id="inputPassword" class="form-control"
                           required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                </div>
                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}

                <button class="btn btn-lg btn-primary" type="submit">
                    Prihlás sa
                </button>
            </div>
        </div>
    </div>

    {% block footer %}{% endblock %}
    {% endblock %}
